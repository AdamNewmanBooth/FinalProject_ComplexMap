<div>
  <div>
    <h1>
      List of all election subcircuits
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new election subcircuit
    </h2>

    <form action="/insert_election_subcircuit" method="post">
      <div>
        <label for="election_id_box">
          Election
        </label>

        <input type="text" id="election_id_box" name="query_election_id">
      </div>

      <div>
        <label for="subcircuit_id_box">
          Subcircuit
        </label>

        <input type="text" id="subcircuit_id_box" name="query_subcircuit_id">
      </div>

      <button>
        Create election subcircuit
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Election
        </th>

        <th>
          Subcircuit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_election_subcircuits.each do |an_election_subcircuit| %>
      <tr>
        <td>
          <%= an_election_subcircuit.id %>
        </td>

        <td>
        <% matching_vacancies = Vacancy.where({ :id => an_election_subcircuit.subcircuit_id }) %>
      
        <% the_subcircuit = matching_subcircuits.at(0) %>

        <%= the_subcircuit.number %>
        </td>

        <td>
        <% matching_subcircuits = Subcircuit.where({ :id => an_election_subcircuit.subcircuit_id }) %>
      
        <% the_subcircuit = matching_subcircuits.at(0) %>

        <%= the_subcircuit.number %>
        
        </td>
        <td>
    
        </td>

        <td>
          <a href="/election_subcircuits/<%= an_election_subcircuit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
