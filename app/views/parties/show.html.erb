<div>
  <div>
    <h1>
      Party #<%= @the_party.id %> details
    </h1>

    <div>
      <div>
        <a href="/parties">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_party/<%= @the_party.id %>">
          Delete party
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_party.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_party.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_party.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit party
    </h2>

    <form action="/modify_party/<%= @the_party.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_party.name %>">
      </div>

      <button>
        Update party
      </button>
    </form>
  </div>
</div>

<hr>
