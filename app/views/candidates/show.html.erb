<div>
  <div>
    <h1>
      Candidate #<%= @the_candidate.id %> details
    </h1>

    <div>
      <div>
        <a href="/candidates">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_candidate/<%= @the_candidate.id %>">
          Delete candidate
        </a>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @the_candidate.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_candidate.last_name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_candidate.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_candidate.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit candidate
    </h2>

    <form action="/modify_candidate/<%= @the_candidate.id %>"  method="post" >
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_candidate.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_candidate.last_name %>">
      </div>

      <button>
        Update candidate
      </button>
    </form>
  </div>
</div>

<hr>
